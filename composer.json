{
    "name": "maaf/core",
    "description": "Modular Application Architecture Framework - Core components",
    "type": "library",
    "keywords": ["framework", "modular", "architecture", "maaf"],
    "license": "MIT",
    "authors": [
        {
            "name": "Bloch TamÃ¡s",
            "email": "info@bloch.hu"
        }
    ],
    "require": {
        "php": ">=8.1",
        "php-di/php-di": "^6.4",
        "nikic/fast-route": "^1.3",
        "psr/http-message": "^2.0",
        "psr/container": "^1.0|^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "MAAF\\": "src/MAAF/"
        },
        "files": [
            "ide-helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MAAF\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

